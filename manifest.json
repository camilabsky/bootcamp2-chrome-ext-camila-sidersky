{
  "manifest_version": 3,
  "name": "Extensão Murloc",
  "version": "1.0.1",
  "description": "Uma extensão simples com tema de Murloc",
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "icons/murloc.png",
      "32": "icons/murloc.png",
      "48": "icons/murloc2.png",
      "128": "icons/murloc2.png"
    }
  },
  "background": {
    "service_worker": "src/background/service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/content.js"]
    }
  ],
  "permissions": ["activeTab"]
}
